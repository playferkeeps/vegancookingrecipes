{
  "name": "vegan-cooking-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run db:check && next dev",
    "build": "prisma generate && next build",
    "start": "npm run db:check && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "generate-recipes": "tsx scripts/generate-recipes.ts",
    "generate-from-file": "tsx scripts/generate-recipes-from-file.ts",
    "generate-images-for-existing": "tsx scripts/generate-images-for-existing-recipes.ts",
    "generate-meal-prep-images": "tsx scripts/generate-meal-prep-images.ts",
    "humanize-content": "tsx scripts/humanize-content.ts",
    "post-recipe-to-x": "tsx scripts/post-recipe-to-x.ts",
    "schedule-x-posts": "tsx scripts/schedule-x-posts.ts",
    "post-recipe-to-facebook": "tsx scripts/post-recipe-to-facebook.ts",
    "schedule-facebook-posts": "tsx scripts/schedule-facebook-posts.ts",
    "post-recipe-to-instagram": "tsx scripts/post-recipe-to-instagram.ts",
    "post-to-social-media": "tsx scripts/post-to-social-media.ts",
    "schedule-social-media-posts": "tsx scripts/schedule-social-media-posts.ts",
    "purge-duplicates": "tsx scripts/purge-duplicate-recipes.ts",
    "analyze-tags": "tsx scripts/analyze-and-tag-recipes.ts",
    "analyze-categories": "tsx scripts/analyze-and-categorize-recipes.ts",
    "generate-blog": "tsx scripts/generate-blog-post.ts",
    "modify-recipe": "tsx scripts/modify-recipe.ts",
    "schedule-blog-posts": "tsx scripts/schedule-blog-posts.ts",
    "add-nutrition": "tsx scripts/add-nutrition-info.ts",
    "optimize-seo": "tsx scripts/optimize-recipe-seo.ts",
    "refresh-tokens": "tsx scripts/refresh-access-tokens.ts",
    "update-katie-to-noah": "tsx scripts/update-katie-to-noah.ts",
    "prepare": "husky",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:check": "tsx scripts/db-check.ts",
    "db:studio": "prisma studio",
    "db:kill-connections": "tsx scripts/kill-connections.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@supabase/supabase-js": "^2.89.0",
    "@tailwindcss/typography": "^0.5.19",
    "fuse.js": "^7.1.0",
    "next": "^16.1.1",
    "oauth-1.0a": "^2.2.6",
    "openai": "^6.15.0",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-icons": "^4.12.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "replicate": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "critters": "^0.0.23",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.32",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
